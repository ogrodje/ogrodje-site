---
import Header from "../components/Header.astro";
export interface Props {
    title: string;
}
const {title} = Astro.props['frontmatter'] || Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Ogrodje Podcast">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg"/> -->
    <link href="https://iosevka-webfonts.github.io/iosevka/iosevka.css" rel="stylesheet" type="text/css">
    <title>{title}</title>
</head>
<body>
<Header></Header>

<slot/>
</body>
</html>
<style lang="scss" is:global>
    html, body {
        margin: 0;
        padding: 0;
    }

    html {
        font-family: system-ui, sans-serif;
        background-color: #000;
        color: white;
        font-size: 14pt;
    }

    body {
        padding: 0 50px 50px;
        max-width: 100ch;
        margin: 0 auto;
    }

    @media only screen and (max-width: 1000px) {
        body {
            padding: 0 20px 20px;
        }
    }

    h1, h2, h3 {
        font-family: 'Iosevka Web', sans-serif;
    }

    a {
        color: #999;
        &:hover {
            color: #666;
        }
    }
</style>
