---
import {Episode, episodePath} from "../model/Episode";

interface Props {
    episode: Episode
}

const {episode} = Astro.props
---
<div class="episode">
    <a href={'/epizode/' + episodePath(episode)}>
        <div class="code">{episode.code}</div>
        {episode.show && (
                <div class="show" data-show={episode.show.name}>{episode.show.name}</div>)
        }
        <div class="name">{episode.name}</div>
    </a>
</div>
<style lang="scss">
    @import "../_variables.scss";

    .episode {
        position: relative;
        & a {
            text-decoration: none;
        }

        .code, .show {
            display: inline;
            margin-right: 5px;
        }

        .name {
            font-family: Iosevka, 'Iosevka Web', sans-serif;
            display: inline;
            color: white;
        }

        margin-bottom: 10px;
    }

    .show {
        padding-left: 10px;
        padding-right: 10px;

        &[data-show="Borderless"] {
            background-color: $ogrodje-zagon-blue;
            color: white;
        }

        &[data-show="Zagon"] {
            background-color: $ogrodje-borderless-green;
            color: white;
        }

        &[data-show="META"] {
            background-color: $ogrodje-meta;
            color: white;
        }
    }
</style>
