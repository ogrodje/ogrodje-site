---
import {
    parsonAvatar,
    Person,
    personEpisodes,
    personPath,
    socialChannels, WithConnectedEpisodes
} from "../model/Person";

interface Props {
    person: Person & WithConnectedEpisodes
    avatarSize: Number
    showSocial: boolean
}

const {person, avatarSize, showSocial} = Astro.props;
const [lastEpisode, ...episodes] = personEpisodes(person);
---
<div class="person">
    <a href={"/ljudje/" + personPath(person)}>
        <img src={parsonAvatar(person, (avatarSize || 100))}
             title={person.fullName} alt={person.fullName}/>
        <div class="name">
            <div class="full-name">{person.fullName}</div>
            {episodes.length >= 1 && (
                    <div class="episodes-count">{episodes.length}+</div>)}
        </div>
        {person.bio && (
                <div class="bio">
                    {person.bio}
                </div>
        )}
    </a>
    {showSocial && (
            <div class="social-channels">
                {socialChannels(person).map(({channel, url}) =>
                    (
                            <div class="social-channel"><a href={url}>{channel}</a></div>)
                )}
            </div>
    )}
</div>
<style lang="scss">
    .person {
        -webkit-column-break-inside: avoid;
        page-break-inside: avoid;
        break-inside: avoid;
        min-height: 90px;
        position: relative;
        padding-left: 110px;
        margin-bottom: 40px;
        padding-right: 10px;

        & a {
            text-decoration: none;
        }

        .name, .bio {
            padding-bottom: 5px
        }

        .name {
            .full-name {
                color: white;
                font-size: 16pt;
                display: inline;
            }

            .episodes-count {
                display: inline;
            }
        }


        img {
            position: absolute;
            top: 0;
            left: 0;
            width: 90px;
            height: 90px;
        }

        .last-episode {
            padding: 10px;
        }
    }
</style>
