---
// import {Image} from 'astro:assets';
import { Image } from '@unpic/astro';

import {
  type Person,
  personPath,
  socialChannels
} from "../model/Person";

interface Props {
  person: Person
  showSocial?: boolean
}

const {person, showSocial} = Astro.props;
---
<div class="person">
  <a href={"/ljudje/" + personPath(person)}>

    {(person.avatar?.url) ? (
      <Image src={person.avatar.url} title={person.fullName}
             alt={person.fullName} width={100} height={100}/>
    ) : ''}

    <div class="name">
      <div class="full-name">{person.fullName}</div>
    </div>
    {person.bio && (
      <div class="bio">{person.bio}</div>
    )}
  </a>
  {showSocial && (
    <div class="social-channels">
      {socialChannels(person).map(({channel, url}) =>
        (
          <div class="social-channel"><a href={url}>{channel}</a></div>
        ))}
    </div>
  )}
</div>
<style lang="scss">
  .person {
    -webkit-column-break-inside: avoid;
    page-break-inside: avoid;
    break-inside: avoid;
    min-height: 90px;
    position: relative;
    padding-left: 110px;
    margin-bottom: 40px;
    padding-right: 10px;

    & a {
      text-decoration: none;
    }

    .name, .bio {
      padding-bottom: 5px
    }

    .name {
      .full-name {
        color: var(--default_color);
        font-size: 16pt;
        display: inline;
      }

      .episodes-count {
        display: inline;
      }
    }

    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100px;
      height: 100px;
    }

    .last-episode {
      padding: 10px;
    }
  }
</style>
